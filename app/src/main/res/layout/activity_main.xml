<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome EGCO428"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="36sp"
            app:layout_constraintHorizontal_bias="0.541" android:layout_marginTop="100dp" android:id="@+id/txtLabel"
            android:textColor="#00BCD4"/>
    <Button
            android:text="Update"
            android:layout_width="206dp"
            android:layout_height="52dp"
            android:id="@+id/updateBtn"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="80dp"
            app:layout_constraintTop_toBottomOf="@+id/add"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText1" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/txtLabel" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="add number here"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editText1" android:hint="add number here"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="96dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>
    <Button
            android:text="Minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/minus" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="96dp"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/editText2"/>

</android.support.constraint.ConstraintLayout>